<catel:Window x:Class="CatelManualGridCreation.Views.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:catel="http://schemas.catelproject.com"
              xmlns:views="clr-namespace:CatelManualGridCreation.Views"
              ResizeMode="CanResize">

     <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0" Content="{Binding Title}" />
        <views:MyUserControl Grid.Row="1" Grid.Column="0" ></views:MyUserControl>
    </Grid>
    
</catel:Window>
